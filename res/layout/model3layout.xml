<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Rl_model3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:visibility="visible"
    android:weightSum="1" >
    <cn.sharelink.view.RockerView 
        android:id="@+id/rockerview_model3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        
        />

    <RelativeLayout
        android:id="@+id/rl_mode3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp" >

        <ImageView
            android:id="@+id/iv_model3_hand"
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/hand2" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtn_mode3_left_button1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/read_button0"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/ibtn_mode3_left_button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/read_button0"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/ibtn_mode3_left_button3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/read_button0"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/ibtn_mode3_left_button4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/read_button0"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ibtn_mode3_right_button1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/greenbtn0"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/ibtn_mode3_right_button2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/greenbtn0"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/ibtn_mode3_right_button3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/greenbtn0"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/ibtn_mode3_right_button4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/greenbtn0"
                android:scaleType="fitXY" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_mode3_red2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/iv_mode3_red1"
            android:layout_alignTop="@+id/iv_mode3_green2"
            android:layout_marginLeft="22dp"
            android:src="@drawable/red2" />

        <ImageView
            android:id="@+id/iv_mode3_green2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/iv_mode3_green1"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@+id/iv_mode3_red2"
            android:src="@drawable/green2" />

        <ImageView
            android:id="@+id/iv_mode3_red1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/iv_model3_hand"
            android:layout_toLeftOf="@+id/iv_model3_hand"
            android:src="@drawable/red1" />

        <ImageView
            android:id="@+id/iv_mode3_green1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/iv_model3_hand"
            android:layout_marginLeft="-13dp"
            android:layout_toRightOf="@+id/iv_mode3_green2"
            android:src="@drawable/green1" />

        <ImageView
            android:id="@+id/iv_mode3_green3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/iv_mode3_red3"
            android:layout_toRightOf="@+id/iv_mode3_red3"
            android:layout_marginTop="5dp"
            android:src="@drawable/green3" />

        <ImageView
            android:id="@+id/iv_mode3_red3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/iv_mode3_green2"
            android:layout_alignTop="@+id/iv_model3_hand"
            android:layout_marginTop="30dp"
            android:src="@drawable/red3" />

        <ImageView
            android:id="@+id/iv_mode3_red4"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/iv_model3_hand"
            android:layout_alignTop="@+id/iv_model3_hand"
            android:layout_marginTop="-5dp"
            android:src="@drawable/red4" />

        <ImageView
            android:id="@+id/iv_mode3_red5"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/iv_model3_hand"
            android:layout_below="@+id/iv_mode3_red4"
            android:layout_marginTop="10dp"
            android:src="@drawable/red5" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:layout_above="@+id/iv_mode3_green3"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/iv_model3_hand"
            android:src="@drawable/green4" />
    </RelativeLayout>
</RelativeLayout>