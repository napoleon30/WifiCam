<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_model5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:visibility="visible" >

    <cn.sharelink.view.RockerView
        android:id="@+id/mode_rock"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="52dp"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:background="@drawable/bg_model_square"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ibtn_mode5_cannon"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/button10" />

            <ImageButton
                android:id="@+id/ibtn_mode5_guns"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/button20" />

            <ImageButton
                android:id="@+id/ibtn_model5_button3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/button30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ibtn_mode5_batteryLeft"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/button40" />

            <ImageButton
                android:id="@+id/ibtn_mode5_batteryRight"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/button50" />

            <ImageButton
                android:id="@+id/ibtn_mode5_button6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/button60" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>